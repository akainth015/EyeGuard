<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="EyeGuard.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:EyeGuard"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid x:Name="AppTitleBar" Height="48">
            <Grid.ColumnDefinitions>
                <ColumnDefinition x:Name="LeftPaddingColumn" Width="0"/>
                <ColumnDefinition/>
                <ColumnDefinition x:Name="RightPaddingColumn" Width="0"/>
            </Grid.ColumnDefinitions>
        </Grid>
        
        <Button x:Name="SettingsButton"
                Click="SettingsButton_Click"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="16,56,16,16"
                Padding="16">
            <FontIcon Glyph="&#xE713;"/>
        </Button>

        <!-- Main Content -->
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" MaxWidth="600">
            <Image Source="/Assets/EyeGuard.png" Height="256" />
            <TextBlock Style="{StaticResource TitleTextBlockStyle}" HorizontalTextAlignment="Center">EyeGuard</TextBlock>
            <TextBlock x:Name="CountdownTextBlock" Style="{StaticResource SubtitleTextBlockStyle}" HorizontalTextAlignment="Center" Margin="16">
                Your next break is in <Bold>20</Bold> minutes.
            </TextBlock>

            <!-- Settings Add-on Promotion (shown when not purchased) -->
            <Border x:Name="SettingsAddonPromotion"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="64 32"
                    Margin="0,24,0,0"
                    Visibility="Collapsed">
                <StackPanel Spacing="16">
                    <TextBlock Style="{StaticResource BodyStrongTextBlockStyle}"
                               HorizontalTextAlignment="Center">
                        Unlock EyeGuard Settings
                    </TextBlock>
                    <TextBlock TextWrapping="Wrap"
                               HorizontalTextAlignment="Center"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                               LineHeight="28">
                        Get access to customizable break intervals, durations, and the ability to pause breaks when you need flexibility.
                    </TextBlock>
                    <Button x:Name="PurchaseAddonButton"
                            Content="Get Settings Add-on"
                            HorizontalAlignment="Center"
                            Style="{StaticResource AccentButtonStyle}"
                            Click="PurchaseAddonButton_Click"/>
                </StackPanel>
            </Border>

            <!-- Pause Controls -->
            <StackPanel Spacing="8" Margin="0,24,0,0" HorizontalAlignment="Center">
                <!-- Not Paused State: Show "Pause Breaks" dropdown button -->
                <StackPanel x:Name="NotPausedControls" Spacing="8" HorizontalAlignment="Center">
                    <DropDownButton Content="Pause Breaks">
                        <DropDownButton.Flyout>
                            <MenuFlyout Placement="Bottom">
                                <MenuFlyoutItem Text="30 minutes" Click="QuickPause30Minutes_Click"/>
                                <MenuFlyoutItem Text="1 hour" Click="QuickPause1Hour_Click"/>
                                <MenuFlyoutItem Text="8 hours" Click="QuickPause8Hours_Click"/>
                                <MenuFlyoutSeparator/>
                                <MenuFlyoutItem Text="Custom..." Click="QuickPauseCustom_Click"/>
                            </MenuFlyout>
                        </DropDownButton.Flyout>
                    </DropDownButton>
                </StackPanel>

                <!-- Paused State: Show pause info and controls -->
                <StackPanel x:Name="PausedControls" Spacing="8" HorizontalAlignment="Center">
                    <StackPanel Orientation="Horizontal" Spacing="8" HorizontalAlignment="Center">
                        <Button
                            x:Name="ResumeBreaksButton"
                            Content="Resume Breaks"
                            Click="ResumeBreaksButton_Click"/>
                        <Button
                            x:Name="ChangeTimeButton"
                            Content="Change This Time"
                            Click="ChangeTimeButton_Click"/>
                    </StackPanel>
                </StackPanel>

                <!-- Date/Time Picker Controls (hidden by default) -->
                <StackPanel x:Name="DateTimePickerControls" Spacing="8" HorizontalAlignment="Center">
                    <TextBlock
                        Text="Select date and time in your local timezone"
                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                        HorizontalTextAlignment="Center"
                        FontSize="12"
                        Margin="0,0,0,4"/>

                    <StackPanel Orientation="Horizontal" Spacing="8" HorizontalAlignment="Center">
                        <DatePicker x:Name="PauseDatePicker"/>
                        <TimePicker x:Name="PauseTimePicker"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Spacing="8" HorizontalAlignment="Center">
                        <Button
                            x:Name="SetPauseButton"
                            Content="Pause Until Selected Time"
                            Click="SetPauseButton_Click"/>
                        <Button
                            x:Name="CancelPauseButton"
                            Content="Cancel"
                            Click="CancelPauseButton_Click"/>
                    </StackPanel>

                    <TextBlock
                        x:Name="PauseStatusText"
                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                        TextWrapping="Wrap"
                        HorizontalTextAlignment="Center"
                        Margin="0,8,0,0"/>
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
